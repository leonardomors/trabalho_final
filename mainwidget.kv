#:kivy 1.11.1
<MainWidget>:

    BoxLayout:
        orientation: 'vertical'
        canvas:
            Color:
                rgb: 0.5,0.5,0.5
            Rectangle:
                size: self.size
        BoxLayout:
            orientation:'horizontal'
            size_hint: (1,0.1)
            spacing: 10
            canvas:
                Color:
                    rgb: 0,0,0
                Rectangle:
                    size: self.size
            Image:
                source: 'imgs/eng_eletrica.png'
                size_hint:(0.15,1)
                haling: 'center'
                valign: 'top'


            Label:
                text: 'SUPERVISORIO TRABALHO FINAL'
                font_size: 25
                size_hint: (0.8,1)
                halign: 'center'
                valign: 'middle'
                markup: True
                color: 0,0,0,1
                
            BoxLayout:
                orientation:'vertical'
                size_hint:(0.3,1)
                Button:
                    text: 'Sincronizar horário'
                    font_size: 15
                    markup: True
                    on_release:
                        root.atualizar_hora()
                Label:
                    id:txt_hora
                    text: ""

            BoxLayout:
                orientation:'vertical'
                size_hint_x: None
                self_hint: (0.2,1)
                Button:
                    text: 'Conexao'
                    on_release: root._modbusPopup.open()
                Button:
                    text: 'ScanTime'
                    on_release: root._scanPopup.open()
            Image:
                size_hint: (0.1,1)
                id: img_com
                source: 'imgs/desconectado.png'

        BoxLayout:
            orientation: 'horizontal'
            BoxLayout:
                orientation:'vertical'
                size_hint: (0.8, 1)
                canvas:
                    Color:
                        rgb: 1,1,1
                    Rectangle:
                        size: self.size

                Image:
                    source: 'imgs/modelo2.png'
                    size_hint: (1,0.85)
                    valign: 'top'
                BoxLayout:
                    canvas:
                        Color:
                            rgb: 0,0,0
                        Rectangle:
                            size: self.size
                    orientation:'horizontal'
                    size_hint: (1, 0.1)
                    valign: 'middle'
                    BoxLayout:
                        size_hint: (0.2, 1)
                        orientation:'vertical'
                        Label:
                            text: 'Solenoide 1'
                            markup: True
                            font_size: 20
                        Button:
                            id: btn_sol1
                            background_normal:'imgs/botao_off.PNG'
                            backgroung_down: 'imgs/botao_off.PNG'
                            on_release:
                                root.atualiza_botao(self)
                    BoxLayout:
                        size_hint: (0.2, 1)
                        orientation:'vertical'
                        Label:
                            text: 'Solenoide 2'
                            markup: True
                            font_size: 20
                        Button:
                            id: btn_sol2
                            background_normal:'imgs/botao_off.PNG'
                            backgroung_down: 'imgs/botao_off.PNG'
                            on_release:
                                root.atualiza_botao(self)
                            
                    BoxLayout:
                        size_hint: (0.2, 1)
                        orientation:'vertical'
                        Label:
                            text: 'Solenoide 3'
                            markup: True
                            font_size: 20
                        Button:
                            id: btn_sol3
                            background_normal:'imgs/botao_off.PNG'
                            backgroung_down: 'imgs/botao_off.PNG'
                            on_release:
                                root.atualiza_botao(self)
                                
                            
                    BoxLayout:
                        size_hint: (0.2, 1)
                        orientation:'vertical'
                        Label:
                            text: 'Motor'
                            markup: True
                            font_size: 20
                        Button:
                            id: motor
                            background_normal:'imgs/botao_off.PNG'
                            backgroung_down: 'imgs/botao_off.PNG'
                            on_release:
                                root.atualiza_botao(self)
                    BoxLayout:
                        size_hint: (0.2, 1)
                        orientation:'vertical'
                        Label:
                            text: 'Emergência'
                            markup: True
                            font_size: 20
                        Image:
                            source: 'imgs/botao_off.PNG'
            FloatLayout:
                orientation:'vertical'
                size_hint: (0.2,1)
                TempLabel:
                    id:lbl_1
                    pos_hint: {'x': 0.15, 'y': 0.4}
                TempLabel:
                    id:lbl_2
                    pos_hint: {'x': 0.15, 'y': 0.25}
                TempLabel:
                    id:lbl_3
                    pos_hint: {'x': 0.15, 'y': 0.10}
                TempLabel:
                    id:lbl_4
                    pos_hint: {'x': 0.15, 'y': -0.05}
                    



            
                
                






<TempLabel@Label>:
    text: '-.-'
    font_size: 20
    bold: True
    halign: 'center'
    color: 1,0,0,1
            
            
            

        