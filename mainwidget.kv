#:kivy 1.11.1
<MainWidget>:
    canvas:
        Color:
            rgb: 0.5,0.5,0.5
        Rectangle:
            size: self.size
    BoxLayout:
        orientation:'vertical'

        BoxLayout:
            orientation:'horizontal'
            size_hint: (1,0.1)
            Image:
                source: 'imgs/eng_eletrica.png'
                size_hint:(0.15,1)
                haling: 'center'
                valign: 'top'


            Label:
                text: 'SUPERVISORIO TRABALHO FINAL'
                font_size: 25
                size_hint: (0.8,1)
                halign: 'center'
                valign: 'middle'
                markup: True
                color: 0,0,0,1

            BoxLayout:
                orientation:'vertical'
                size_hint_x: None
                self_hint: (0.2,1)
                Button:
                    text: 'Conexao'
                    on_release: root._modbusPopup.open()
                Button:
                    text: 'ScanTime'
                    on_release: root._scanPopup.open()
            Image:
                size_hint: (0.1,1)
                id: img_com
                source: 'imgs/desconectado.png'
        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1,0.9)
            Button:
                text:'planta'