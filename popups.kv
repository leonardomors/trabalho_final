#:kivy 1.11.1

<ModbusPopup>:
    title: "Conexão"
    size_hint_y: None
    size_hint_x: 0.4
    height: 200
    BoxLayout:
        id: layout
        orientation: 'vertical'
        GridLayout:
            cols: 2
            rows: 2
            Label:
                text: "IP"
                font_size: 14
            TextInput:
                id: txt_ip
                text: "127.0.0.1"
                font_size: 14
                halign: 'center'
                valign: 'middle'
            Label:
                text: "Porta"
                font_size: 14
            TextInput:
                id: txt_port
                text: "503"
                font_size: 14
                halign: 'center'
                valign: 'middle'
        BoxLayout:
            orientation:'horizontal'
            Button:
                size_hint_y: None
                height: 40
                text: 'Conectar'
                on_release:
                    
                    app.root.conectar(txt_ip.text, int(txt_port.text))
                    
                    
            Button:
                size_hint_y: None
                height: 40
                text: 'FECHAR'
                on_release:
                    root.dismiss()

<ScanPopup>:
    title: "SCAN TIME"
    size_hint_y: None
    size_hint_x: 0.4
    height: 150
    BoxLayout:
        orientation:'vertical'
        BoxLayout:
            orientation: 'horizontal'
            Label:
                id:lbl_scan
                text: 'Scan time [ms]: '
                font_size: 14
            TextInput:
                id: ti_scan
                text: ''
                valign: 'middle'
                halign: 'center'
        Button:
            text:'ATUALIZAR'
            on_release:
                

<MotorPopup>:
    title: "INFORMAÇÕES DO MOTOR"
    halign: 'center'
    size_hint: (0.8, 0.8)
    GridLayout:
        cols: 2
        rows: 7

        Label:
            text: "Frequencia desejada:" 
            font_size: 15
        TextInput:
            id: freq_des
            text: "60"
            font_size: 15
        Label:
            text: "Ligar / Desligar motor"
            font_size: 15
        BoxLayout:
            orientation:'horizontal'
            Button:
                id: op_motor
                text: 'LIGAR'
                font_size: 15
                on_release:
                    app.root.ligar_motor(int(freq_des.text))
            Button:
                id: desop_motor
                text: 'DESLIGAR'
                font_size: 15
                on_release:
                    app.root.desligar_motor()

        Label:
            text: "Estado do motor: "
        Label:
            id:estado_mot
            text: "-.-"
        Label:
            text: "Tempo de partida: "
        Label:
            id:t_part
            text: "-.-"
        Label:
            text: "Frequência medida: "
        Label:
            id:freq_motor
            text: '-.-'
        Label:
            text: "Rotação"
        Label:
            id:rotacao
            text: "-.-"
        Label:
            text: "Temperatura no estator"
        Label:
            id:temp_estator
            text: ''

<InversorPopup>:
    title: "INFORMAÇÕES DO INVERSOR"
    halign: 'center'
    size_hint: (0.8, 0.8)
    GridLayout:
        cols: 2
        rows: 3
        Label:
            text: 'Tensão na rede: '
        Label:
            id:tensao
            text: '-.-'
        Label:
            text: 'Potência de entrada: '
        Label:
            id:pot_entrada
            text: '-.-'
        Label:
            text: 'Corrente: '
        Label:
            id:corrente
            text: '-.-'



        
                    
